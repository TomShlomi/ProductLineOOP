<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<!--suppress ALL, JavaFxUnusedImports -->
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
         prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.131"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <tabs>
        <Tab fx:id="product_line" text="Product Line">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <GridPane layoutX="14.0" layoutY="48.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TextField fx:id="txt_product_text" promptText="Product Name" GridPane.columnIndex="1"/>
                                <TextField fx:id="txt_manufacturer_text" promptText="Manufacturer"
                                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <ChoiceBox fx:id="cbx_item_type" prefWidth="150.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2"/>
                                <Label text="Product Name"/>
                                <Label text="Manufacturer" GridPane.rowIndex="1"/>
                                <Label text="Item Type" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                        <Button fx:id="add_product" layoutX="14.0" layoutY="160.0" mnemonicParsing="false"
                                onAction="#productLineButtonAction" text="Add Product"/>
                        <Label layoutX="214.0" layoutY="48.0" text="Existing Products"/>
                        <TableView fx:id="tbv_existing_products" layoutX="214.0" layoutY="66.0" prefHeight="200.0"
                                   prefWidth="239.0">
                            <columns>
                                <TableColumn text="Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="name"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn prefWidth="83.20001220703125" text="Manufacturer">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="manufacturer"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn prefWidth="76.79998779296875" text="Type">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="type"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                            <items>
                                <FXCollections fx:factory="observableArrayList"></FXCollections>
                            </items>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab fx:id="produce" text="Produce">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Choose Product"/>
                        <ListView fx:id="lvw_choose_product" layoutX="14.0" layoutY="32.0" prefHeight="200.0"
                                  prefWidth="200.0"/>
                        <Label layoutX="214.0" layoutY="14.0" text="Choose Quantity"/>
                        <ComboBox fx:id="cmb_choose_quantity" layoutX="214.0" layoutY="32.0" prefWidth="150.0"/>
                        <Button fx:id="btn_record_production" layoutX="62.0" layoutY="232.0" mnemonicParsing="false"
                                onAction="#recordProductionButtonAction" text="Record Production"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab fx:id="production_log" text="Production Log">
            <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <TextArea layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0"/>
                    </children>
                </AnchorPane>
            </content>
        </Tab>

    </tabs>
</TabPane>
